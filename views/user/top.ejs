<!DOCTYPE html>
<html>
  <head>
    <title>Demo</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.css'/>
    <link rel='stylesheet' href='/stylesheets/bootstrap-grid.css'>
  </head>
  <body>
    <div class="container"><div class="row text-center">
    <div id='header' class="navbar col-sm-12">
    <% if(user.auth === "guest"){ %>
      <div class="col-sm"><a href="/">Home</a></div>
      <div class="col-sm"><a href="/login">Login</a></div>
      <div class="col-sm"><a href="/register">Register</a></div>
      <div class="col-sm">Hello, <b>Guest</b>.</div>
    <% } else { 
      const URL = "/users/information?username=" + user.user;
    %>
      <div class="col-sm"><a href="/">Home</a></div>
      <div class="col-sm"><a href="/users/myOrders">My Orders</a></div>
      <div class="col-sm">Hi, <b><a href="<%= URL%>"><%= user.user%></a></b>. <a href="/logout">Logout</a></div>
    <% } %>
    </div></div></div>
    <hr>