<%include top%>

<div class="container"><div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 text-center">
        <h2>Change Password</h2>
        <form action="/users/changePassword" method="POST">
            <div class="container"><div class="row">
                <label class="col-sm-5" for="currentPassword">Current Password</label>
                <input class="col-sm-7" type="password" name="currentPassword" id="currentPassword">
            </div></div>
            <div class="container"><div class="row">
                <label class="col-sm-5" for="newPassword">New Password</label>
                <input class="col-sm-7" type="password" name="newPassword" id="newPassword">
            </div></div>
            <div class="container"><div class="row">
                <label class="col-sm-5" for="confirm">Confirm Password</label>
                <input class="col-sm-7" type="password" id="confirm">
            </div></div><br>
            <input type="submit" value="Change">
        </form>
    </div>
    <div class="col-sm-3"></div>
</div></div>

<%include bot%>